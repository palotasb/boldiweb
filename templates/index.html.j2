<!DOCTYPE html>
<html lang="en" class="smooth-scroll">
<head>
    <meta charset="utf-8" />
    <title>{{folder.title}}
        {% if folder != album.target_root %}
            â€“ {{album.title}}
        {% endif %}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ (album.target_static / 'style.css') | relative_to(folder.path) }}" />
    <script type="text/javascript" src="{{ (album.target_static / 'script.js') | relative_to(folder.path) }}"></script>
</head>
<body>
    <header>
        <h1>{{folder.title}}</h1>
        <nav>
        {% for parent in folder.parents + [folder] %}
            <a href="{{ parent.path | relative_to(folder.path) }}/index.html">{{parent.title}}</a>
            {{ "â†’" if not loop.last else "" }}
        {% endfor %}
        </nav>
    </header>

    <main id="main">
        {% if folder.subfolders | length %}
        <section id="subfolders" class="flex-masonry">
        {% endif %}
        {% set TARGET_SIZE = 150 %}
        {% for subfolder in folder.subfolders.values() %}
            %% set image = subfolder.cover_image
            %% set width = image.width
            %% set height = image.height
            %% set aspect = (width / height) | round(2)
            <div class="flex-masonry-outer" style=" aspect-ratio: {{aspect}}; flex-grow: {{aspect}};">
                <figure class="flex-masonry-inner" style="aspect-ratio: {{aspect}};">
                    <a class="thumbnail-container" href="{{subfolder.path | relative_to(folder.path)}}/index.html">
                        <img
                            class="thumbnail"
                            style="aspect-ratio: {{aspect}};"
                            alt="{{ subfolder.title }}"
                            src="{{ image.path_800w | relative_to(folder.path) }}"
                        />
                    </a>
                    <figcaption><a href="{{subfolder.path | relative_to(folder.path)}}/index.html">{{subfolder.title}}</a></figcaption>
                </figure>
            </div>
        {% endfor %}
        {% if folder.subfolders | length %}
        </section>
        {% endif %}

        {% if folder.images | length %}
        <section id="thumbnails" class="flex-masonry">
        {% endif %}
        {% for name, image in folder.images.items() %}
            %% set width = image.width
            %% set height = image.height
            %% set aspect = (width / height) | round(2)
            <div class="flex-masonry-outer" style=" aspect-ratio: {{aspect}}; flex-grow: {{aspect}};">
                <div class="flex-masonry-inner" style="aspect-ratio: {{aspect}};">
                    <a id="{{ image.path.stem }}.thumbnail" class="thumbnail-container" href="#{{ image.path.stem }}">
                        <img
                            class="thumbnail"
                            style="aspect-ratio: {{aspect}};"
                            alt="{{ image.title }}"
                            src="{{ image.path_800w | relative_to(folder.path) }}"
                        />
                    </a>
                </div>
            </div>
        {% endfor %}
        {% if folder.images | length %}
        </section>
        {% endif %}


        {% if folder.images | length %}
        <aside id="usage">
            <p>
                Go to:
                <a href="#top"><kbd>E</kbd> <span>Top</span></a>
                |
                <a href="#thumbnails"><kbd>G</kbd> <span>Thumbnails</span></a>
                |
                <a href="#images"><kbd>P</kbd> <span>Pictures</span></a>
                |
                <a href="javascript:toggleFullScreen()"><kbd>F</kbd> <span>Full Screen</span></a>
                |
                <a href="javascript:scrollToNextUrlHashTarget(-1);"><kbd>â‡</kbd> <span>Previous</span></a>
                |
                <a href="javascript:scrollToNextUrlHashTarget(+1);"><kbd>â‡’</kbd> <span>Next</span></a>
            </p>
        </aside>
        {% endif %}
        
        {% if folder.images | length %}
        <section id="images">
        {% endif %}
        {% for name, image in folder.images.items() %}
            <article class="image" id="{{ image.path.stem }}">
                <div class="image-container">
                    <picture style="display: block;" onclick="scrollToNextUrlHashTarget(+1, document.querySelector('#{{ image.path.stem }}'));">
                        <img class="image"
                            srcset="{{ image.path_800w | relative_to(folder.path) }} 800w, {{ image.path_1500w | relative_to(folder.path) }} 1500w, {{ image.path_3000w | relative_to(folder.path) }} 3000w, {{image.path | relative_to(folder.path)}}"
                            src="{{image.path | relative_to(folder.path)}}"
                            alt="{{image.exif.IPTC.Artist}}" />
                    </picture>
                </div>
                <div class="description">
                <h2><a href="#{{ image.path.stem }}">{{image.title}}
                    {% if image.title != image.source.path.stem %}
                    <small>[{{image.path.stem}}]</small>
                    {% endif %}
                </a></h2>
                <p class="image-description">
                    {{image.description or undefined}}
                </p>
                <p class="gray-text">
                    <span class="un-gray-text">{{image.shutter_speed | human_round or "?"}}</span>s,
                    ğ‘“/<span class="un-gray-text">{{image.aperture | human_round or "?"}}</span>,
                    ISO <span class="un-gray-text">{{image.iso | human_round or "?"}}</span>,
                    <abbr title="Light Value, the amount of light in the scene">LV</abbr> <span class="un-gray-text">{{image.light_value | human_round or "?"}}</span>,
                    <abbr title="Exposure compensation">Î”EV</abbr> <span class="un-gray-text">{{image.exposure_compensation | human_round or "0"}}</span>.
                </p>
                <p class="gray-text">
                    {{image.camera}} {{ "+" if image.camera and image.lens else "" }}
                    {{image.lens}} 
                    at ğ‘“ = {{image.focal_length | human_round or "?"}}mm
                    ({{image.focal_length_35mm | human_round or "?"}}mm <small>at 35mm <abbr title="Equivalent Field of View">equiv. FOV</abbr></small>).
                </p>
                <p>
                    <a href="#{{ image.path.stem }}.thumbnail">â‡§ {{ folder.title }}</a> |
                    <a href="javascript:toggleFullScreen()"><span>ğŸ“º </span>Full screen</a>
                </p>
                </div>
            </article>
        {% endfor %}
        {% if folder.images | length %}
        </section>
        {% endif %}
    </main>
  
    <footer id="bottom">
        <nav>
        {% for parent in folder.parents + [folder] %}
            <a href="{{ parent.path | relative_to(folder.path) }}/index.html">{{parent.title}}</a>
            {{ "â†’" if not loop.last else "" }}
        {% endfor %}
        </nav>
        <p id="copyright">Copyright &copy;</p>
    </footer>
</body>
</html>
